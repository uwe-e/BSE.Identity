@inherits LayoutComponentBase
@inject IStringLocalizer<MainLayout> Localize

<PageTitle>BSE.Identity.Blazor.Client</PageTitle>
<header>
    <FluentToolbar id="toolbar-fluent-components" style="width:100%">
        <img src="/bse-logo-57x57.png" alt="My Logo" /><FluentLabel Typo="@Typography.H2">@Localize["Txt_PageHeader"]</FluentLabel>
        <LoginDisplay />
    </FluentToolbar>
</header>
<main>
    <article class="content px-4">
        @Body
    </article>
</main>
<footer>
    <div style="width:100%"><FluentLabel slot="end" Typo="@Typography.Body">@string.Format(Localize["Txt_Footer-Copyright"], DateTime.Now.Year)</FluentLabel></div>
</footer>
